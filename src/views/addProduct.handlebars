<h1>Agregar Producto</h1>
<!-- Botón flotante "Back" -->
    <a href="http://localhost:8080/" class="floating-button">Regresar</a>

<form id="addProductForm">
    <label for="id">ID:</label>
    <input type="text" id="id" name="id" required><br>

    <label for="title">Nombre:</label>
    <input type="text" id="title" name="title" required><br>

    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" required><br>
    
    <label for="description">Descripción:</label>
    <textarea id="description" name="description" required></textarea><br>

    <label for="category">Categoría:</label>
    <input type="text" id="category" name="category" required><br>

    <label for="code">Código:</label>
    <input type="text" id="code" name="code" required><br>

    <label for="stock">Stock a agregar:</label>
    <input type="number" id="stock" name="stock" required><br>

    <label for="thumbnail">Imagen:</label>
    <br>
    <input type="file" accept="image/png,image/jpeg" id="thumbnail" name="thumbnail" ><br>
    <br>

    <button type="submit">Enviar</button>
</form>


<script src="/js/addProduct.js"></script>